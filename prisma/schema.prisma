generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  NON_BINARY
}

enum AccountStatus {
  VERIFIED
  PENDING
  SUSPENDED
}

model User {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String        @unique
  role          Role          @default(CUSTOMER)
  password      String
  phone         String?
  address       String?
  dateOfBirth   DateTime?
  gender        Gender?
  accountStatus AccountStatus @default(PENDING)
  avatar        String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([role])
  @@index([accountStatus])
}
